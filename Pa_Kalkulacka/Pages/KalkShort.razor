@page "/kalkShort"

<PageTitle>Kalkulačka Short</PageTitle>
@* dfg *@
<h1>Základní matematické operace - Short</h1>
<hr />
<label>Číslo 1: <input @bind-value="cislo1" /></label>
<br />
<label>Číslo 2: <input @bind-value="cislo2" /></label>
<div class="m-3">
	<button @onclick="Soucet" type="button" class="btn btn-primary">Součet</button>
	<button @onclick="Rozdil" type="button" class="btn btn-secondary">Rozdíl</button>
	<button @onclick="Soucin" type="button" class="btn btn-success">Součin</button>
	<button @onclick="Podil" type="button" class="btn btn-info">Podíl</button>
</div>
<label>Výsledek: <input @bind-value="vysledek" readonly /></label>

@code {

	/// <summary>
	/// První číslo pro výpočet.
	/// </summary>
	private short cislo1;

	/// <summary>
	/// Druhé číslo pro výpočet.
	/// </summary>
	private short cislo2;

	/// <summary>
	/// Výsledek matematické operace.
	/// </summary>
	private short vysledek;

	/// <summary>
	/// Vypočítá součet dvou čísel.
	/// </summary>
	private void Soucet()
	{
		vysledek =  (short)(cislo1 + cislo2);
	}

	/// <summary>
	/// Vypočítá rozdíl dvou čísel.
	/// </summary>
	private void Rozdil()
	{
		vysledek = (short)(cislo1 - cislo2);
	}

	/// <summary>
	/// Vypočítá součin dvou čísel.
	/// </summary>
	private void Soucin()
	{
		vysledek = (short)(cislo1 * cislo2);
	}

	/// <summary>
	/// Vypočítá podíl dvou čísel.
	/// </summary>
	private void Podil()
	{
		vysledek = (short)(cislo1 / cislo2);
	}
}
